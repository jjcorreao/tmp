{
    "language"        : "PYTHON",
    "experiment-name" : "neon-hyperopt",
    "polling-time"    : 1,
    "resources" : {
        "my-machine" : {
            "scheduler"         : "local",
            "max-concurrent"    : 1,
            "max-finished-jobs" : 100
        },
        "cluster" : {
            "scheduler"         : "PBS",
            "scheduler-args"    : "-q regular -l walltime=01:30:00 -l mppwidth=24",
            "max-concurrent"    : 24,
            "max-finished-jobs" : 200
        }
    },
    "tasks": {
        "hyperopt" : {
            "type"       : "OBJECTIVE",
            "likelihood" : "NOISELESS",
            "main-file"  : "ar-mlp",
            "resources"  : ["my-machine", "cluster"]
        }
    },
    "variables": {
        "lrate" : {
            "type" : "FLOAT",
            "size" : 1,
            "min"  : 0.00001,
            "max"  : 10
        },
        "lrule_coef" : {
            "type" : "FLOAT",
            "size" : 1,
            "min"  : 0.0001,
            "max"  : 1
        },
        "num_epochs" : {
            "type" : "INT",
            "size" : 1,
            "min"  : 1,
            "max"  : 50
        },
        "batch_size" : {
            "type" : "INT",
            "size" : 1,
            "min"  : 100,
            "max"  : 2000
        }
    }
}